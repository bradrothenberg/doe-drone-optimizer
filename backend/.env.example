# Environment Configuration for DOE Drone Optimizer API

# API Configuration
APP_NAME="DOE Drone Design Optimizer API"
APP_VERSION="1.0.0"
DEBUG=false

# CORS Configuration (comma-separated list)
# For development, allow localhost:3000 and localhost:5173 (Vite default)
# For production, specify your exact frontend domain
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=true

# Model Configuration
MODELS_DIR=data/models
XGB_MODEL_NAME=xgboost_v1.pkl
NN_MODEL_NAME=neural_v1.pt
FEATURE_ENGINEER_NAME=feature_engineer.pkl

# Security
# Set to true only in development to see full error details
SHOW_ERROR_DETAILS=false
